pipeline{
	agent any 
	tools {maven 'maven'}
		stages{
			stage('git-clone') {
				steps{
					checkout([$class: 'GitSCM', branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[credentialsId: 'jenkins', url: 'https://github.com/Arise-Atongwe/spring-boot-docker.git']]])
				}
			}
			stage('codebuild'){
				steps{
				sh 'mvn clean package -DskipTests=true'
				}
			}
			stage('Unit Tests - JUnit and JaCoCo'){
				steps{
					sh 'mvn test'
					sh 'mvn -v'
				}
//				post{
//					always{
//						junit'target/surefire-reports/*.xml'
//						jacoco execPattern: 'target/jacoco.exec'
//					}
//				}
			}
			stage('Build Docker Image'){
				steps{
        				sh 'docker build -t mylandmarktech/spring-boot-mongo .'
				}
    			}
		}
	} 
